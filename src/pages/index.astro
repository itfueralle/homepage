---
import { Image } from "astro:assets";
import PlainLayout from "../layouts/PlainLayout.astro";
---

<PlainLayout>
  <div>
    <Image src={import("/src/assets/logos/default.png")} alt="IT fÃ¼r Alle Logo"/>
    <a href="/taufkirchen/" class="taufkirchen">Taufkirchen</a>
    <a href="/moosburg/" class="moosburg">Moosburg</a>
  </div>
</PlainLayout>

<style>
  div {
    height: 100dvh;

    display: flex;
    gap: 4px;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  img {
    max-width: 100%;
    width: 400px;
    height: auto;
  }

  a {
    &.taufkirchen {
      color: var(--primary-color-taufkirchen);
      border-color: var(--primary-color-taufkirchen);
      &:hover {
        background-color: var(--primary-color-taufkirchen);
      }
    }
    &.moosburg {
      color: var(--primary-color-moosburg);
      border-color: var(--primary-color-moosburg);
      &:hover {
        background-color: var(--primary-color-moosburg);
      }
    }

    &:hover {
      color: white;
    }

    text-decoration: none;
    border: 3px solid;
    border-radius: 8px;
    max-width: 100%;
    width: 400px;
    padding: 8px;
    box-sizing: border-box;
    text-align: center;
  }
</style>