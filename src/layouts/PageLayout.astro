---
import Navbar from "../components/Navbar.astro";
import type { Variant } from "../variants.ts";
import PlainLayout from "./PlainLayout.astro";

interface Props {
  variant: Variant;
}

const { variant } = Astro.props;
---

<PlainLayout>
  <Navbar {variant}/>
  <div class="content">
    <slot/>
  </div>
</PlainLayout>

<style>
  .content {
    justify-self: center;
    max-width: 1000px;
  }
</style>