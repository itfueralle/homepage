---
import type { Variant } from '../variants.ts';
import { Icon } from "astro-icon/components";

interface Props {
  title: string,
  location: string,
  date: string,
  time: string,
  variant: Variant
}

const { title, location, date, time, variant } = Astro.props;
---

<div class="card">
  <span class="title">{title}</span>
  <span><Icon name="marker"/> {location}</span>
  <span><Icon name="calendar"/> {date}</span>
  <span><Icon name="clock"/> {time}</span>
</div>

<style define:vars={{"primary-color": `var(--primary-color-${variant.getId()})`}}>
  .card {
    border: 4px solid var(--primary-color);
    border-radius: 12px;

    display: flex;
    flex-direction: column;
    padding: 8px;
  }

  .title {
    font-weight: bold;
  }
</style>