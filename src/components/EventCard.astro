---
import type { Variant } from '../variants.ts';

interface Props {
  title: string,
  location: string,
  date: string,
  time: string,
  variant: Variant
}

const { title, location, date, time, variant } = Astro.props;
---

<div class="card">
  <span>{title}</span>
  <span>{location}</span>
  <span>{date}</span>
  <span>{time}</span>
</div>

<style define:vars={{"primary-color": `var(--primary-color-${variant.getId()})`}}>
  .card {
    border: 4px solid var(--primary-color);
    border-radius: 16px;

    display: flex;
    flex-direction: column;
    padding: 8px;
  }
</style>