---
import { Image } from "astro:assets";
import { getAsset } from "../assets.ts";

interface Props {
  variant: string;
}

const { variant } = Astro.props;
---

<div class="navbar">
  <Image src={getAsset(`logos/${variant}.png`)} alt={"IT fÃ¼r Alle Logo"} loading="eager"/>
  <div class="links">
    <a href={`/${variant}/`}>Startseite</a>
    <a href={`/${variant}/mitglieder`}>Mitglieder</a>
    <a href={`/${variant}/termine`}>Termine</a>
  </div>
</div>

<style>
  .navbar {
    height: 150px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 0 32px;
    border-bottom: 4px solid var(--primary-color);
    margin-bottom: 16px;
  }

  img {
    height: 100%;
    width: auto;
  }

  .links {
    height: 100%;
    display: flex;
  }

  a {
    text-decoration: none;
    color: black;
    height: 100%;
    display: flex;
    align-items: center;
    padding: 0 16px;
    font-size: larger;

    &:hover {
      background-color: var(--primary-color);
      color: white;
    }
  }
</style>